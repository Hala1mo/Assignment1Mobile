<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#457D39DC"
    tools:context=".MainActivity"
    android:layout_margin="8dp"
    android:orientation="vertical">




    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="201dp"
        android:src="@drawable/math" />

    <TextView
        android:id="@+id/equ"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="Equation Type"
        android:textColor="#9C27B0"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/equ"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <Button
        android:id="@+id/solve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="Solve"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/solve"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:textAlignment="center"
        android:textColor="#F43636"
        android:textSize="30sp"
        android:textStyle="bold" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/solve"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:textAlignment="center"
        android:textColor="#F43636"
        android:textSize="30sp"
        android:layout_toRightOf="@id/ex"
        android:id="@+id/ans"
        />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ans"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Submit"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/good"
        android:layout_width="232dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/submit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Excellent"
        android:textColor="#52F436"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bad"
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/submit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Bad"
        android:textColor="#F43636"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bad"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:text="Your Score is:"
        android:textColor="#F43636"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bad"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="28dp"
        android:layout_toRightOf="@id/msg"
        android:text="0"
        android:textColor="#F43636"
        android:textSize="30sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/msg"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />


</RelativeLayout>